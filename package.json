{
  "name": "quickcredit",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals. This helps solve problems of financial inclusion as a way to alleviate poverty and empower low income earners",
  "main": "bin/dev",
  "engines": {
    "npm": "6.4.1",
    "node": "10.15.1"
  },
  "scripts": {
    "test": " cross-env NODE_ENV=test nyc mocha server/tests/*.spec.js --require babel-polyfill --exit",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint src",

    "start": "node bin/dev", 

    "heroku-postbuild": "npm install --production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benshidanny11/QuickCledit.git"
  },
  "author": "Urimubenshi Daniel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benshidanny11/QuickCledit/issues"
  },
  "homepage": "https://github.com/benshidanny11/QuickCledit#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai-http": "^4.3.0",
    "dotenv": "^7.0.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.1.1",
    "request": "^2.88.0",
    "uuid": "^3.3.2",

    "babel-polyfill": "^6.26.0",
    "@babel/core": "^7.4.4", 
    "@babel/cli": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-plugin-istanbul": "^5.1.4",
    "@babel/register": "^7.4.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.25.1"

  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/*.spec.js",
      "**/coverage/**",
      "**/UI/**"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
